<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">



<Gasolineras.Models.Gasolinera>

    <center>
        <h2>@ViewBag.Title</h2>
    </center>

    @using (Html.BeginForm("Index", "Gasolineras", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <center>
            <h4>Datos de la tarjeta</h4>
        </center>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <center>
            <label for="exampleFormControlInput1" class="form-label">Número de tarjeta</label>
            <input class="form-control form-control-sm" type="text" placeholder="Número de tarjeta" aria-label=".form-control-sm example" >
            <br />
        </center>

        <center>
            <label for="exampleFormControlInput1" class="form-label">Nombre y apellido</label>
            <input class="form-control form-control-sm" type="text" placeholder="Nombre y apellido" aria-label=".form-control-sm example" >
            <br />
        </center>

        <center>
            <label for="exampleFormControlInput1" class="form-label">Vencimiento</label>
            <input class="form-control form-control-sm" type="text" placeholder="Vencimiento" aria-label=".form-control-sm example" >
            <br />
        </center>

        <center>
            <label for="exampleFormControlInput1" class="form-label">Código de seguridad</label>
            <input class="form-control form-control-sm" type="text" placeholder="Código de seguridad" aria-label=".form-control-sm example" >
            <br />
        </center>

        <center>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
                Pagar
            </button>
        </center>
        <!-- Modal -->
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Pago confirmado</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" href="@Url.Action("Index","Gasolineras")">Cerrar</button>

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <center>
                    <br>
                    <br>
                    <input type="submit" class="btn btn-admin" value="Volver al mapa" />
                </center>
            </div>
        </div>




    }

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
